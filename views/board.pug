extends layout

block content
  h1= title
  p Welcome to #{title} or Lab10

  p Rows #{query.rows}, Cols #{query.cols}
  - var rows = Number(query.rows)
  - var cols = Number(query.cols)
  if !Number.isInteger(rows)
    p Rows is not an integer.
  if !Number.isInteger(cols)
    p Cols is not an integer.
  else if rows < 1 || rows > 10
    p Rows out of range (1 to 10)
  else if cols < 1 || cols > 10
    p Cols out of range (1 to 10)
  else
    table#outer
      - for(let i = 0; i < rows; i++) {
          tr#middle 
          - for(let j = 0; j < cols; j++) {
              if i == j
                td  1
              else if i + 1 > j && i + 1 < j + 3
                td  2
              else if i < j + 2 && i > j - 2
                td  #{i}
              else 
                td  0
          - }
      - }